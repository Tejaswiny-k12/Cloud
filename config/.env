# Healthcare IoT Monitoring System - Environment Configuration

# MQTT Configuration
MQTT_BROKER=mosquitto
MQTT_PORT=1883
MQTT_TOPIC=/iot/health

# Device Configuration
DEVICE_ID=ESP32_001
SEND_INTERVAL=3

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Database Configuration
DATABASE_PATH=anomalies.db

# Model Configuration
MODEL_PATH=model.pkl
SCALER_PATH=scaler.pkl

# Anomaly Detection Thresholds
HR_MIN=60
HR_MAX=100
TEMP_MIN=36.0
TEMP_MAX=37.5
SIGNAL_MIN=-100
BATTERY_MIN=10

# Streamlit Configuration
STREAMLIT_PORT=8501
STREAMLIT_SERVER_HEADLESS=true
